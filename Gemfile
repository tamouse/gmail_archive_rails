source 'https://rubygems.org'

gem 'rails', '3.2.13'
gem 'sqlite3'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer', :platforms => :ruby
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem 'bcrypt-ruby', '~> 3.0.0'
gem 'jbuilder'
gem 'unicorn'
gem 'capistrano'
gem 'haml'

group :development, :test do
  gem 'debugger'
  gem 'rspec-rails'
  gem 'watchr'
  gem 'spork'
end

group :development do
  gem 'haml-rails'
  gem 'hpricot'
  gem 'ruby_parser'
  gem 'html2haml'
end

group :test do
  gem 'capybara'
end

group :cucumber do
  gem 'cucumber-rails'
  gem 'webrat'
  gem 'watir'
  gem 'database_cleaner'
end
